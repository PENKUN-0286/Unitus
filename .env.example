# Unitus Environment Configuration
# Development environment file - change values for production

# Server Configuration
PORT=8080
ENVIRONMENT=development
LOG_LEVEL=debug

# Database
DATABASE_URL=postgresql://unitus:password@localhost:5432/unitus
POSTGRES_USER=unitus
POSTGRES_PASSWORD=password
POSTGRES_DB=unitus

# Redis
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=168h

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8000,http://127.0.0.1:*

# Server Identity
SERVER_NAME=Unitus Development Server
SERVER_VERSION=1.0.0

# File Storage
STORAGE_PATH=./uploads
MAX_FILE_SIZE=52428800  # 50MB in bytes

# AI Configuration (Optional)
# These will be configured per team via API
GEMINI_API_KEY=
OPENAI_API_KEY=

# Email Configuration (Optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Security
BCRYPT_COST=10
SESSION_TIMEOUT=3600

# Feature Flags
ENABLE_REAL_TIME_SYNC=true
ENABLE_AI_FEATURES=true
ENABLE_WEBHOOKS=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
